{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,

    "noImplicitAny": false,
    "noEmitOnError": true,
    "declaration": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@spa/app*": [ "app*" ]
    },
    "outDir": "../API/wwwroot/aot"
  },
  "exclude": [
    "main-jit.ts",
    "node_modules"
  ]
}